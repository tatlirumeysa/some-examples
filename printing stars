public static void main(String[] atgs){
 int number;
  Scanner input = new Scanner (System.in);
    System.out.println("how many lines you want:");
    number = input.nextInt();
  for(int i = 0; i <= number; i++){
    for(int j = 0; j< number - i; j++){
      System.out.print(" ");
      }
      for(int k = 0; k < 2*i-1 ; k++){
        System.out.print("*");
        }
          System.out.print("\n");
          }
      }
